<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="#F0F0F0"
    tool:context=".MainBoard">

    <!-- Toolbar 설정 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:text="메인 게시판"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 각 버튼에 대한 스타일 지정 -->
            <!-- MaterialButton 스타일 적용 및 버튼 크기와 그림자 효과 지정 -->
            <Button
                android:id="@+id/freeBoardBtn"
                android:layout_width="380dp"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:text="자유 게시판"
                android:textColor="#000000"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/infoBoardBtn"
                android:layout_width="380dp"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:text="정보 게시판"
                android:textColor="#000000"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="8dp" />


            <Button
                android:id="@+id/recipeBoardBtn"
                android:layout_width="380dp"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:text="레시피 게시판"
                android:textColor="#000000"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/marketBoardBtn"
                android:layout_width="380dp"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:text="장터 게시판"
                android:textColor="#000000"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="8dp" />


            <Button
                android:id="@+id/businessBoardBtn"
                android:layout_width="380dp"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:text="업소 게시판"
                android:textColor="#000000"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="8dp" />


            <Button
                android:id="@+id/bestPostsBoardBtn"
                android:layout_width="380dp"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:text="BEST 게시판"
                android:textColor="#000000"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/hotTopicsBoardBtn"
                android:layout_width="380dp"
                android:layout_height="62dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:text="HOT 게시판"
                android:textColor="#000000"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>